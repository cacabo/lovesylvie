<div class="container marg-top-2 marg-bot-2">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1">
      <h2 class="bold marg-bot-1">
        Listing all perfumes
      </h2>
      <% @perfumes.each do |p| %>
        <div class="perfume">
          <h3 class="bold">
            <%= p.name %>
          </h3>
          <p class="gray-text">
            <%= p.characteristics %>
          </p>
          <p>
            <%= p.body %>
          </p>
          <%= link_to "Edit", edit_perfume_path(p) %>
        </div>
      <% end %>
      <%= link_to "Create New", new_perfume_path, class: "btn btn-outline-purple btn-sm" %>
    </div>
  </div>
</div>
