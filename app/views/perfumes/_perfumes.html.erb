<% @perfumes = Perfume.all %>

<div class="container-fluid marg-top-2 marg-bot-2 marg-wide">
  <div class="row">
    <div class="col-12">
      <div class="space-1 hidden-md-down"></div>
      <h2 class="marg-bot-2 accent-text bold center-mobile">
        Meet your perfumes
      </h2>

      <!-- Render the perfumes -->
      <div id="perfumes" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
          <!-- Render each perfume -->
          <% @perfumes.each_with_index do |p, index| %>
            <div class="<%= index == 0 ? "carousel-item active" : "carousel-item" %>">
              <div class="container">
                <div class="row">
                  <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
                    <div class="flex">
                      <div class="image-wrapper">
                        <% if p.image.file? %>
                          <%= image_tag p.image.url, class: "img" %>
                        <% end %>
                      </div>
                      <div class="content">
                        <div class="space-2"></div>
                        <div class="space-4 hidden-md-down"></div>
                        <div class="space-2 hidden-lg-down"></div>
                        <h3 class="accent-text bold">
                          <%= p.name %>
                        </h3>
                        <p class="characteristics">
                          <%= p.characteristics %>
                        </p>
                        <p>
                          <%= p.body %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Render the links to toggle different perfumes -->
  <ul class="perfume-list">
    <% @perfumes.each_with_index do |p, index| %>
      <li class="<%= index == 1 ? "perfume-item active" : "perfume-item" %>" value="<%= index %>">
        <%= p.name %>
      </li>
    <% end %>
  </ul>
</div>
