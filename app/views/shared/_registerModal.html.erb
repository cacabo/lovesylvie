<div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="register" aria-hidden="true">
  <div class="space-4"></div>
  <div class="space-4"></div>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="close-wrapper full-width">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "register-form" }) do |f| %>
          <h3 class="title">
            Register
          </h3>

          <%= devise_error_messages! %>

          <div class="field marg-bot-1 marg-top-05">
            <%= f.email_field :email, class: 'form-control register-email', required: true, placeholder: "Email", id: "register-email" %>
            <i class="fa fa-fw fa-envelope after" aria-hidden="true"></i>
          </div>

          <div class="field marg-bot-1">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control register-password', required: true, placeholder: "Password", id: "register-password" %>
            <i class="fa fa-fw fa-lock after" aria-hidden="true"></i>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true, placeholder: "Confirm password" %>
            <i class="fa fa-fw fa-unlock after" aria-hidden="true"></i>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-purple full-width' %>
          </div>
        <% end %>

        <div class="links">
          Already have an account? <%= link_to "Login here.", new_user_session_path %>
        </div>
      </div>
    </div>
  </div>
</div>
