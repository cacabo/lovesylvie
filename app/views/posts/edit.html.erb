<head>
    <% title 'Love Sylvie | Edit Post' %>
    <% description "Edit an existing blog post" %>
</head>

<div class="container">
    <div class="row pad-top-25 pad-bot-25">
        <div class="col-12 col-md-8 offset-md-2 marg-top-2">
            <%= render 'form' %>

            <div class="space-1"></div>
            <%= link_to posts_path do %>
              <button class="btn btn-outline-purple btn-sm">
