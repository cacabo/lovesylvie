<head>
    <% title 'Love Sylvie | New Post' %>
    <% description "Write a new blog post" %>
</head>

<div class="container marg-top-2">
    <div class="row pad-top-25 pad-bot-25">
        <div class="col-12 col-md-8 offset-md-2 bubble">
            <h2 class="marg-bot-1">
              Write a new post
            </h2>

            <%= render 'form' %>

            <div class="space-2"></div>
            <%= link_to posts_path do %>
              <button class="btn btn-sm btn-outline-purple">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                &nbsp;Back to all posts
              </button>
            <% end %>
        </div>
    </div>
</div>
