<head>
    <% title 'Love Sylvie | New Post' %>
    <% description "Write a new blog post" %>
</head>

<div class="gray full-height">
    <div class="space pad-top-50"></div>
    <div class="container">
        <div class="row pad-top-25 pad-bot-25">
            <div class="col-12 col-md-8 offset-md-2 bubble">
                <h2>New Post</h2>
                <%= render 'form' %>
                <div class="space"></div>
                <%= link_to posts_path do %>
                  <button class="btn btn-primary btn-sm">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                    &nbsp;Back to all articles
                  </button>
                <% end %>
            </div>
        </div>
    </div>
    <div class="space"></div>
</div>
