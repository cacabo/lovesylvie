<%= form_for @post, html: { multipart: true }, class: 'article-form' do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h4>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this article from being saved:
      </h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <label for="title" class="form-label">Title</label>
  <%= f.text_field :title, placeholder: "Pick your title...", required: true, class: 'form-field form-control', autofocus: true %>

  <label for="text" class="form-label">Post body</label>
  <%= f.text_area :text, class: "no-scroll animate min-30", placeholder: "Write your article here...", required: true, class: 'form-field form-control' %>
  <%= f.file_field :image %>

  <div class="space-2"></div>

  <%= f.submit "Submit Post", class: "btn btn-purple" %>
<% end %>
