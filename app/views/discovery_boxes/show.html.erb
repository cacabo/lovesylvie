<div class="gray-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class="space-1 hidden-md-down"></div>
        <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
          <%= image_tag "discovery-box/#{@box.perfumes.length}.png", class: 'img-fluid' %>
        </div>
        <div class="card pad-2 marg-bot-2">
          <% if @box.perfumes.empty? %>
            <p class="marg-bot-0">You haven't added any perfumes to your box yet. Select some from the list below.</p>
          <% else %>
            <h4>Contained in this box</h4>
            <% @box.perfumes.each do |p| %>
              <div class="row perfume">
                <div class="push-4 col-4 push-md-0 col-md-3 col-lg-2">
                  <% if p.image.file? %>
                    <%= image_tag p.image.url, class: "img-fluid" %>
                  <% end %>
                </div>
                <div class="col-12 col-md-9 col-lg-10">
                  <h4 class="bold">
                    <%= p.name %>
                  </h4>
                  <p class="characteristics">
                    <%= p.characteristics %>
                  </p>
                  <p>
                    <%= p.body %>
                  </p>
                  <%= link_to remove_perfume_path(@box, p), method: :delete do %>
                    <div class="btn btn-primary btn-sm">
                      Remove perfume
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="card pad-2 marg-bot-2">
          <!-- <p class="bold marg-bot-0"><%= @box.title %></p> -->
          <div class="space-1"></div>
          <% if @perfumes.nil? or @perfumes.empty? %>
            <p class="marg-bot-0">All perfumes are in your box!</p>
          <% else %>
            <h4>Perfumes not in your box</h4>
            <% @perfumes.each do |p| %>
              <div class="row perfume">
                <div class="push-4 col-4 push-md-0 col-md-3 col-lg-2">
                  <% if p.image.file? %>
                    <%= image_tag p.image.url, class: "img-fluid" %>
                  <% end %>
                </div>
                <div class="col-12 col-md-9 col-lg-10">
                  <h4 class="bold">
                    <%= p.name %>
                  </h4>
                  <p class="characteristics">
                    <%= p.characteristics %>
                  </p>
                  <p>
                    <%= p.body %>
                  </p>
                  <%= link_to add_perfume_path(@box, p), method: :post do %>
                    <div class="btn btn-primary btn-sm">
                      Add perfume
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
