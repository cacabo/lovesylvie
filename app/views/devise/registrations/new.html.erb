<div class="container marg-top-2 marg-bot-2">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
      <h2 class="bold accent-text">Sign up</h2>

      <% if not @user.nil? and not @user.email.nil? and not @user.email.length == 0 %>
        <p>
          <%= @user.email %> must be one good friend!
        </p>
      <% end %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field marg-bot-1">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="field marg-bot-1">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
        </div>

        <div class="field marg-bot-1">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
        </div>

        <div class="actions marg-bot-1">
          <%= f.submit "Sign up", class: 'btn btn-purple full-width' %>
        </div>
      <% end %>

      <% if @user.nil? %>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
