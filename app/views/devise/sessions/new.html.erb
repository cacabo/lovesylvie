<div class="background-image full-page" style="background-image: url(<%= asset_path "background.jpg" %>)">
  <div class="container">
    <div class="space-2"></div>
    <div class="space-2 hidden-md-down"></div>
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="white round-2 pad-2 shade-2">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h2 class="bold accent-text">
              Log in
            </h2>

            <div class="field marg-bot-1">
              <%= f.email_field :email, autofocus: true, class: 'form-control', required: true, placeholder: 'Email' %>
              <i class="fa fa-fw fa-envelope after" aria-hidden="true"></i>
            </div>

            <div class="field marg-bot-1">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true, placeholder: 'Password'%>
              <i class="fa fa-fw fa-lock after" aria-hidden="true"></i>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field marg-bot-1">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions marg-bot-1">
              <%= f.submit "Log in", class: 'btn btn-purple full-width' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
        <div class="space-2"></div>
      </div>
    </div>
  </div>
</div>
